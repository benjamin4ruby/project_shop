<h1><%=t :new_user %></h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :forename %><br />
    <%= f.text_field :forename %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <br />
    <%= f.password_field(:password, :value => '', :class => 'masked_input_field') %> min. 8
    <br/>
    <%= f.label :password_confirmation %>
    <br />
    <%= f.password_field(:password_confirmation, :value => '', :class => 'masked_input_field') %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.hidden_field(:hidden_password) %>
    <%= f.hidden_field(:hidden_password_confirmation) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to t(:back), users_path %>