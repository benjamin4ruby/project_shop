  <tr>
    <td><%= show_image product %></td>
    <td><%=h product.title %></td>
    <td><%=h product.description %></td>
    <td><%=h product.published %></td>
    <td><%=h show_currency product.price %></td>
    <td><%= link_to t(:show), product %></td>
    <td><%= link_to t(:edit), edit_product_path(product) %></td>
    <td><%= link_to t(:destroy), product, :confirm => I18n.t(:confirm_delete), :method => :delete %></td>
  </tr>

