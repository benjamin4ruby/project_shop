<h1>Editing product</h1>
<%# /* multipart: does not work yet */%>
<% form_for(@product, :multipart => true ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.label :price %><br />
    &euro;&nbsp;<%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
    <% unless imagefile_exists? @product.image %>
      <div class="warning">WARNING: This file doesn't exist!</div>   
    <% end %>
  </p>
  <p>
    <b>or</b>
  </p>
  <p>
    <%= f.label :upload_image, "Upload new Image" %><br />
    <%#= f.file_field(:upload_image) %>
  </p>
  <% f.fields_for :properties do |f_p| 
  	render :partial => 'edit_property', :locals => { :form => f_p }
  end
  %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>
